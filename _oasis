  Path: src
  Modules: ExpectPcre
  BuildDepends: expect, pcre
  FindlibParent: expect
  FindlibName: pcre

Library "expect-str"
  Path: src
  Modules: ExpectStr
  BuildDepends: expect, str
  FindlibParent: expect
  FindlibName: str
  
